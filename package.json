    "test": "jest"
  },
  "author": "Osman Cea <osman.cea@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/daslaf/rx-effects.git"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"src/**/*\""
    }
  },
  "dependencies": {
    "@types/react": "^16.9.53",
    "rxjs": "^6.6.3",
    "react": "^17.0.1",
    "tslib": "^2.0.3"
  },
  "peerDependencies": {
    "@types/react": "^16.9.53",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.0.0",
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "rollup": "^2.32.1",
    "typescript": "^4.0.3"
  },
  "bugs": {
    "url": "https://github.com/daslaf/rx-effects/issues"
  },
  "homepage": "https://github.com/daslaf/rx-effects#readme"
