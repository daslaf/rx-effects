{
  "name": "@daslaf/rx-effects",
  "version": "0.0.1",
  "description": "Utilities for handling side effects with rxjs and react hooks",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.esm.js",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "start": "concurrently \"tsc --watch --outDir dist/lib --declarationDir dist/types --declaration true\" \"rollup -c --watch\"",
