{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2019"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.tsx",
    "scripts",
    "jest",
    "jest.config.js",
    "rollup.config.js",
    "src/**/__tests__*.test.ts",
    "esm",
    "cjs"
  ]
}